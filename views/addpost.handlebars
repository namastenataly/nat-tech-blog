{{!-- Add a New Post Form --}}
<div class="d-flex justify-content-center mt-5">
  <div class="card w-75 p-4 shadow-sm">
    <h2 class="text-center mb-4">Write a New Blog Post</h2>
    <form class="addpost-form">
      <div class="mb-3">
        <label for="post-title" class="form-label fs-5">Post Title</label>
        <input type="text" class="form-control" id="post-title" placeholder="Enter Blog Post Title" required>
      </div>
      <div class="mb-3">
        <label for="post-content" class="form-label fs-5">What's On Your Mind?</label>
        <textarea class="form-control" id="post-content" rows="6" required></textarea>
      </div>
      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-danger" id="post-back-button">Back</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/createPost.js"></script>