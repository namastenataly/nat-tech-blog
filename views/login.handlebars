{{!-- Login Form --}}
<div class="d-flex justify-content-center mt-5">
  <div class="card w-50 p-4 shadow-sm">
    <h2 class="text-center mb-4">Login</h2>
    <form class="login-form">
      <div class="mb-3">
        <label for="usernameLogin" class="form-label">Username</label>
        <input type="text" class="form-control" id="usernameLogin" placeholder="Enter Username" required>
      </div>
      <div class="mb-3">
        <label for="passwordLogin" class="form-label">Password</label>
        <input type="password" class="form-control" id="passwordLogin" placeholder="Enter Password" required>
      </div>
      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/signup" class="btn btn-link">Sign Up Instead</a>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>